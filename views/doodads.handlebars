<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="page-header">
        <h1>Doodads</h1>
      </div>
    </div>
  </div>
</div>

<div class="grid">
  <div class="grid-sizer"></div>
  <div class="grid-item">
    <a href="doodads/election2016">
    <div class="content_square">
      <img src="{{{static '/img/nader.jpg'}}}"></img>
      <div class="grid-item-title">Did Hillary get Nadered?</div>
    </div>
    </a>
  </div>
</div>

<script>
    var $grid = $('.grid').masonry({
        itemSelector: '.grid-item',
        columnWidth: '.grid-sizer',
        percentPosition: true
    });
	// layout Masonry after each image loads
	$grid.imagesLoaded().progress( function() {
  		$grid.masonry('layout');
	});
</script>

<script>
  $(".grid-item")
  .mouseover(function() {
    $(".grid-item-title", this).stop().show( "fast", function() {                                                                                                                                     
        // Animation complete.
    });
  })
  .mouseout(function() {
    $(".grid-item-title", this).hide();
  });
</script>
